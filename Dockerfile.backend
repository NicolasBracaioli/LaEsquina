FROM node:22-alpine

# Crear directorio de la app
WORKDIR /app

# Copiar dependencias
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar todo el c√≥digo
COPY . .

# Build del frontend (genera /dist)
RUN npm run build

# Exponer puerto backend
EXPOSE 3000

# Comando de inicio
CMD ["node", "back/server.js"]
